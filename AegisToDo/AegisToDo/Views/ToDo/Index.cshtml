@model IEnumerable<AegisToDo.Models.ToDoItem>

@{
    ViewBag.Title = "Aegis ToDo Application";
}

<div>
    <button id="addbutton" class="btn btn-default">Add</button>
    <div id="addnew"></div>
    <script>
        document.getElementById("addbutton").onclick = function () { addItem() };
        function addItem() {
           $("#addnew").load("@Html.Raw(Url.Action("Create", "ToDo"))")
        }
    </script>
</div>

<div>
<div id="edit"></div>

</div>

<body>
    <header>
        <h3>@ViewBag.Message</h3>
    </header>
    <div>
        <table>
            <tr>
                <th>Item Title</th>
                <th>Due Date</th>
                <th>Completed</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.DueDate</td>
                    <td>@item.IsDone</td>
                    <td>
                        <input id="edit-button" type="image" class="imgbutton" src="~/Content/icons/editicon.png"
                               onclick="location.href='@Url.Action("Edit","ToDo", new { id = item.ItemId })' " />
                        @*<input id="edit-button" type="image" class="imgbutton" src="~/Content/icons/editicon.png" />
                                
                        <script>
                            $('#edit-button').onclick(function(){
                                $('#edit').load(@Url.Action("Edit", "ToDo", new { id = item.ItemId}))
                            })
                        </script>*@
                    </td>
                    <td>
                        <input type="image" class="imgbutton" src="~/Content/icons/trashcan.png" 
                               onclick="location.href='@Url.Action("Delete","ToDo", new { id = item.ItemId })' " />
                    </td>
                </tr>

            }
        </table>
    </div>
</body>

